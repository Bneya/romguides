<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <!-- %= csrf_meta_tags % -->
    <!-- %= csp_meta_tag %> -->

    <!-- %= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' % -->
    <!-- %= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' % -->

    <% csrf_meta_tags %>
    <% csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">


    <!-- Template de post show -->
    <link href="app/assets/stylesheets/blog-post.css" >

    <!-- Import de clases para login screen-->
    <link href="app/assets/stylesheets/loginscreen.css" >

    <!-- Import relacionados al sidebarmenu -->
    <link href="app/assets/stylesheets/sidebar_style.css" >

    <!-- Import de clases custom, debe estar al final para sobreescribir cualquier cosa-->
    <link href="app/assets/stylesheets/customclasses.css" >



  </head>

  <body style="margin-top: 0px">
    <!-- Para administrar las alertas. Ahora no son alerts -->

<!-- HEADER -->

<header class="header_area" id="header">
  <nav class="navbar navbar-expand-lg" style="
  background: #131516;
  height: 65px;
  width: 100%;
  position: fixed;
  margin-top: -60px;
  ">
    <div class="navbar-collapse collapse w-100 order-0 dual-collapse2" style="padding-top: 7px">
      <a class="navbar-brand" href=<%= root_path %>>
        <%= image_tag "/logo.png", style: 'height:60;width: 60px;' %>
      </a>
    </div>

    <div class="navbar-collapse collapse w-100 order-1 dual-collapse2" style="padding-top: 7px"></div>

    <% if user_signed_in? %>
      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2" style="padding-top: 7px">
        <span class="navbar-brand mr-sm-2 text-right h1">
          <div class="container">
            <div class="row">
              <div class="col-lm-3"><p style="color: white;padding-right: 10px;">Estas conectado como: <%= current_user.email %></p></div>
              <div class="col-lm-3"><%= button_to('Logout', destroy_user_session_path, method: :delete) %></div>
            </div>
          </div>
        </span>
      </div>
    <% else %>
      <div class="navbar-collapse collapse w-100 order-2 dual-collapse2" style="padding-top: 7px"></div>
      <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
        <span class="navbar-brand mr-sm-2 text-right h1">
          <div class="container">
            <div class="row">
              <div class="col-lm-3" style="padding-right: 5px;"><%= button_to('Iniciar sesiÃ³n', new_user_session_path) %></div>
              <div class="col-lm-3" style="padding-left: 5px;"><%= button_to('Registrarse', new_user_registration_path) %></div>
            </div>
          </div>
        </span>
      </div>
    <% end %>
  </nav>
  </header>

  <% flash.each do |name, msg| %>
    <div class='alert alert-info'>
      <%= msg %>
    </div>
  <% end %>

<!-- END HEADER -->

    <%= yield %>
  </body>
</html>
