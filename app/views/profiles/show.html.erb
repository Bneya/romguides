<div class="container target">
    <div class="row">
        <div class="col-sm-10">
        	<br><br>
            <h1 class=""><%= @profile.username %></h1>
            <% if current_user.id == @profile.user_id%>
            <%= button_to 'Editar perfil', edit_profile_path(@profile), :method=>"get" %>
            <% end%>
        </div>
      <div class="col-sm-2"><a href="/users" class="pull-sright"><img title="profile image" class="img-circle img-responsive" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTBG685vI07-3MsuqJxjCfzIabfFJJG-8yM-ppvjjNpD5QNtWNE4A"></a>
      </div>
      <p>Imagen: <%= @profile.pic %></p>
    </div>
  <br>
    <div class="row">
        <div class="col-sm-3">
            <!--left col-->
            <ul class="list-group">
                <li class="list-group-item text-muted" contenteditable="false"><%= @profile.user_id %></li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Username: </strong></span><%= @profile.username %></li>
                <li class="list-group-item text-muted" contenteditable="false"><%= @profile.description %></li>
            </ul>
        </div>
        <% Post.where(user_id: @profile.user_id).order(:status, :created_at).each do |article| %>
        	<div class="row">
			    <div class="col-4" style= "text-align: center;">
			      <%= article.thumbnail %>
			    </div>
			    <div class="col-8">
			      <div class="container">
			        <div class="row">
			          <div class="col">
			            <h2><%= link_to article.title, article %></h2>
			          </div>
			        </div>
			        <div class="row">
			          <div class="col">
			            <%= strip_tags(article.content)[0..300] + " ..." %>
			          </div>
			        </div>
			      </div>

			    </div>
			  </div>
			  <hr>
        <%end%>
	</div>
</div>
