<% @categories = Guidecategory.all() %>
<% @cats_xindong = @categories.where(versioncat: "Xindong") %>

<div class="wrapper">
    <!-- Sidebar  -->
    <nav id="sidebar">
        <div class="sidebar-header">
            Guías
        </div>

        <ul class="list-unstyled components">

            <li>
                <a href="#chargrowth_submenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Crecimiento de personaje</a>
                <ul class="collapse list-unstyled" id="chargrowth_submenu">
                    <% @cats_xindong.where(macrocat: "char_growth").each do |cat| %>
                      <li><%= link_to cat.name, posts_path(:category => cat.name, :version => cat.versioncat) %> </li>
                    <% end %>
                </ul>
            </li>
            <li>
                <a href="#lifeskills_submenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Otras habilidades</a>
                <ul class="collapse list-unstyled" id="lifeskills_submenu">
                  <% @cats_xindong.where(macrocat: "life_skills").each do |cat| %>
                    <li><%= link_to cat.name, posts_path(:category => cat.name, :version => cat.versioncat) %> </li>
                  <% end %>
                </ul>
            </li>
            <li>
                <a href="#misc_submenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Misceláneo</a>
                <ul class="collapse list-unstyled" id="misc_submenu">
                  <% @cats_xindong.where(macrocat: "misc").each do |cat| %>
                    <li><%= link_to cat.name, posts_path(:category => cat.name, :version => cat.versioncat) %> </li>
                  <% end %>
                </ul>
            </li>
        </ul>

        <ul class="list-unstyled CTAs">

            <a href="posts/new" class="downloadcustom">Crear post</a>

        </ul>
    </nav>

    <!-- Page Content  -->

</div>

